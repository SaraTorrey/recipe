<% include ./partials/header%>

<div class="ui main text container">
    <div id="index-header" class="ui huge header">Recipe 5.0</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% recipes.forEach(function ( recipe ) { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= recipe.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/recipes/<%= recipe._id%>"><%= recipe.title %></a>
                        <div class="meta">
                            <span><%= recipe.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- recipe.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic grey button" href="/recipes/<%= recipe._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
